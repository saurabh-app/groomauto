<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/listView"
        android:background="@color/Yollew" />

    <RelativeLayout
        android:id="@+id/mgroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/groom"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130dp"
            android:src="@drawable/myt" />

        <TextView
            android:id="@+id/mygroomtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groom"
            android:gravity="center_horizontal"
            android:text="My Groom"
            android:textColor="@color/Black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mgmore"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_below="@+id/mygroomtxt"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnservise"
            android:text="More Details"
            android:textAllCaps="false"
            android:textColor="@color/White" />
    </RelativeLayout>

</LinearLayout>
